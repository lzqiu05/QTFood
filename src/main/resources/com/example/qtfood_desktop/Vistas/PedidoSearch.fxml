<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.DatePicker?>
<VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.qtfood_desktop.Controlador.PedidosController">
    <children>
        <HBox fx:id="contenedorBusqueda" alignment="CENTER" spacing="15.0">
            <children>
                <DatePicker fx:id="fechaPicker" prefWidth="250.0"
                            promptText="Selecciona la fecha"
                            style="-fx-background-color: rgba(255,255,255,0.15);
                                   -fx-text-fill: white;
                                   -fx-prompt-text-fill: rgba(255,255,255,0.7);
                                   -fx-border-color: #D95F14;
                                   -fx-border-radius: 8;
                                   -fx-background-radius: 8;" />

                <TextField fx:id="precioTotalField" prefWidth="250.0" promptText="Introduce el precio total"
                           style="-fx-background-color: rgba(255,255,255,0.15);
                           -fx-text-fill: white;
                           -fx-prompt-text-fill: rgba(255,255,255,0.7);
                           -fx-border-color: #D95F14;
                           -fx-border-radius: 8;
                           -fx-background-radius: 8;" />

                <Button prefWidth="120.0" text="Buscar"
                        style="-fx-background-color: linear-gradient(to bottom, #A40000, #8B0000);
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 25;" />
            </children>
        </HBox>

        <!-- El Ãºnico TableView -->
        <TableView fx:id="tableView" prefHeight="250.0" prefWidth="400.0"
                   style="-fx-background-color: rgba(255, 255, 255, 0.1);
                          -fx-border-color: #D95F14;
                          -fx-border-radius: 10;
                          -fx-padding: 10;" />
    </children>
</VBox>

